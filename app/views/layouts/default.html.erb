<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
		<meta name="author" content="Oxydium - SUPINFO PS1"/>
		<meta name="category" content="ERP"/>
		<meta name="publisher" content="Oxydium - SUPINFO PS1"/>
		<meta name="copyright" content="Oxydium - SUPINFO PS1"/>
    <%= stylesheet_link_tag_with_theme_support "default.css" %>
    <%= tag("link", { "rel" => "shortcut icon", "type" => "image/x-icon", "href" => "#{$CURRENT_THEME_PATH}/favicon.ico" }) %>
    <%= javascript_include_tag "prevent_close" %>
    <%= javascript_include_tag "display_time" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "text_area_autoresize" %>
    <%= daynames_and_monthnames_retrieval %>   
    
    <%= yield :header %>
		<title>Page d'accueil - Intranet d'EMR [Enseigne, Maintenance Réunion]</title>
	</head>
	<body>  
    <!-- BANNIERE -->
    <div id="banner">
      <div id="logo"> 
        <span id="welcome_message"><%= display_welcome_message %></span>
      </div>	
      <div id="background_banner">
        <div id="block_button_banner">
          <div id="button_on_banner">
            <a class="button_banner" href="<%= root_path %>"><span>Ma page d'accueil</span></a>
            <a class="button_banner" href="<%= search_path %>"><span>Rechercher</span></a>
            <a class="button_banner" href="<%= logout_url %>"><span>Se déconnecter</span></a>
          </div>
          <div id="banner_datetime">
            <p><%= display_date_time %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- SOUS-BANNIERE -->
    <div id="under_banner">
      <!-- TODO disable this helper when feature memorandum are disable -->
      <%= display_memorandums %>
    </div>
    <div id="block_body"><!-- REGROUPS THE WHOLE OF THE WEBSITE WITH THE EXCEPTION OF BANNERS -->
      <div id="nav">
        <%= display_menu %>
      </div>
      <div id="page">	<!-- CONTENT OF THE PAGE -->
        <div id="contextual_menu_container"> <!-- CONTEXTUAL MENU CONTAINER -->
          <div class="shown_contextual_menu" id="contextual_menu_toggle_button">
            <span id="status_background_contextual_menu">
              <span id="status_text_contextual_menu">Cacher le menu</span>
            </span>
          </div>
          <div id="contextual_menu"> <!-- CONTEXTUAL MENU -->
            <div id="shadow_contextual_menu">
              <div id="content_contextual_menu">
                <h1><span class="gray_color">Recherche</span> <span class="blue_color">contextuelle</span></h1>
                <!--contextual search formulary -->
                <% form_tag(search_path, :method=>'put', :id=>"contextual_search_form", :class=>"skip_prevent_close") do %>
                  <%= contextual_search %>
                <% end %> 

                <%= yield :contextual_menu %>
                <div id="footer_contextual_menu">&nbsp;</div>
              </div>
            </div>
          </div>
        </div>
        <div id="content_page">
          <%= display_flash %>
          
          <%= yield %>
          
          <p><%= link_to 'Retour', :back %></p>
          
        </div> <!-- content_page : FIN -->
      </div> <!-- PAGE : FIN -->
      <div id="footer">
        <p>
          <%= display_footer %>
          <br/>
          <a href="http://validator.w3.org/check?uri=referer">
            <img class="bottom_icons" src="/images/valid-xhtml.png" alt="Valid XHTML 1.0 Strict" height="15" width="80" />
          </a>
        </p>
      </div><!-- FOOTER : FIN-->
    </div> <!-- CORPS : FIN -->
	</body>
</html>
