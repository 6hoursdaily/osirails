city = City.find(params[:id])
[0,1].each do |i|
  page["city_id_#{params[:random_identifier]}"].up('.address').down('.city_name',i).value     = city.name
  page["city_id_#{params[:random_identifier]}"].up('.address').down('.zip_code', i).value     = city.zip_code
  page["city_id_#{params[:random_identifier]}"].up('.address').down('.region_name', i).value  = city.region ? city.region.name : ""
  page["city_id_#{params[:random_identifier]}"].up('.address').down('.country_name', i).value = city.country.name
end
