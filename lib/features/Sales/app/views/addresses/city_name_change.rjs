country = Country.find_by_name(params[:country_name])
cities =City.find_all_by_name(params[:city_name])
if cities.length == 1
  page["new_city#{params[:cpt]}_zip_code"].value = cities[0].zip_code
  country = Country.find_by_id(cities[0].country_id)
  unless country.nil?
    page["new_country#{params[:cpt]}_name"].value = country.name
  end
elsif country != nil
  cities.each do |city|
      if city.country_id = country.id
        page["new_city#{params[:cpt]}_zip_code"].value = city.zip_code
      end
  end
end