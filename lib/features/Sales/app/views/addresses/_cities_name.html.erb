<% unless  @cities.nil?%>
<ul class="cities">
  <% for city in @cities do -%>
    <li>
      <div class="city_name_and_country"><%=city.name + "(" + city.country.name + ")" -%></div>
      <div class="city_id" style="display:none;"><%=city.id -%></div>
      <div class="city_zip_code" style="display:none;"><%=city.zip_code -%></div>
      <div class="city_name" style="display:none;"><%=city.name -%></div>
    </li>
  <% end -%>
</ul>
<%end%>