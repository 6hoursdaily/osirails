if params[:selected] == "true"
  country = Country.find_by_name(params[:country_name])
  
  if country != nil
    unless City.find_by_name(params[:city_name], :conditions => ["country_id = ?", country.id])
      page["new_city#{params[:cpt]}_name"].value = ""
      page["new_city#{params[:cpt]}_zip_code"].value = ""
      page << "document.getElementById('country_#{params[:cpt]}_selected').value = 'false';"
    end
  end
end