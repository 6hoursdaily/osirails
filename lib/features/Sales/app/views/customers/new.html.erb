<h1>Nouveau Client</h1>

<% form_for(@customer) do |customer| %>
  <fieldset>
    <legend>Création d'un nouveau Client</legend>
  <%= customer.error_messages %>
  <%= render :partial => 'thirds/third', :locals => {:third => customer} %> 
  <%= customer.submit  'Créer' %> 
  </fieldset>
<% end %>
