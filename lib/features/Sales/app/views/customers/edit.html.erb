<h4>Modifier un client </h4>
<% form_for(@customer) do |customer| %>
        <%= customer.error_messages %>
        <%= render :partial => 'thirds/third', :locals => {:third => customer, :type => "client"} %>
        <%= customer.submit  'Modifier' %>
<% end %><br/>
<fieldset>
  <legend> Informations concernant les établissement du client </legend>
  <%for establishment_ in @establishments%>
        <% form_for(establishment_) do |establishment| %>
      <br/>
      <%= establishment.error_messages %>
      <%= render :partial => 'establishments/establishment', :locals => {:establishment => establishment} %>
      <%= establishment.submit  'Modifier' %><br/>
  <% end %>
<% end %>
</fieldset>
<br/>

<fieldset>
  <legend> Ajouter un établissement pour le client </legend>
  <% form_for(@new_establishment) do |new_establishment| %>
          <%= new_establishment.error_messages %>
          <%= render :partial => 'establishments/establishment', :locals => {:establishment => new_establishment} %>
          <%= new_establishment.submit  'Ajouter' %>
  <% end %>
  </fieldset>
  <%= link_to 'Retour', :action => 'index' %>
