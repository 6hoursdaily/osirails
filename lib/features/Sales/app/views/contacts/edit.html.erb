<fieldset>
  <legend> Informations concernant <%= @contact.first_name + " " +@contact.last_name%></legend>
  <% form_for([@owner, @contact],:url => {:action => "update", :owner => @owner, :owner_type => @owner_type})  do |contact| %>
    <%= @owner_type%>
    <%= render :partial => 'contact', :locals => {:contact => contact, :possible_owners => @possible_owers, :contact_type => @contact_type} %>
   
    <%= submit_tag 'Modifier' %>
    <%= link_to("Supprimer", [@owner, @contact],
      :type => "test",
      :method => :delete
        )%>

  <%end%>
  
</fieldset>

<%= get_return_link(params[:owner_type])%>