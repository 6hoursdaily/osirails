<h4>Modifier un fournisseur </h4>
<fieldset>
<% form_for(@supplier) do |supplier| %>
    <%= supplier.error_messages %>
    <%= render :partial => 'thirds/third', :locals => {:third => supplier, :type => "fournisseur"} %>
    
    <% if @contacts.length > 0 -%>
  <fieldset>
    <% #Faire un plurialize "Contacts" de la legend"%>
    <legend> Contacts du client</legend> 
      <% for contact in @contacts%>
          <div <%= "id='customer_contact#{contact.id}'" %>>
            <%= contact.first_name + " " + contact.last_name%>
            <%= link_to "Plus d'infos", edit_customer_contact_path(@supplier, contact,:owner_type => "Supplier") %>
            <%= link_to("Supprimer", [@supplier,  contact], :method => :delete) %>
          </div>
      <%end #for%>   
  </fieldset>
  <%end #if%>
  
  <%= render :partial => 'contacts/new_contact', :locals => {:owner_type => "Supplier",
                :owner_id => @supplier.id, :params => params, :new_contact_number => @new_contact_number,
                :error => @error} %>
  
    <br/><%= supplier.submit  'Modifier' %>
<% end %><br/>
</fieldset>
<%= link_to 'Retour', suppliers_path %>