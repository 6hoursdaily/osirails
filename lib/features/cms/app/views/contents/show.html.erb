<% secondary_menu "Actions possibles" do %>
  <%= show_edit_button(@content, 1) %>
<% end %>

<% secondary_menu "Liens utiles" do %>
  <%= link_to 'Voir la liste des contenus', :action => 'index' %>
<% end %>

<% if @content.versions.length > 0 %>
  <% secondary_menu "Historique" do %>
    <%= show_contents_versions(@content_versions) %>
  <% end %>
<% end %>

<h1><%= @content.title %></h1>
<div class="frame formated_content">
  <fieldset>
    <p><%= @content.description %></p>
    <hr/>
    <p><%= @content.text %></p>
    <hr/>
    <p>
      <strong>Auteur :</strong>
      <%= (@author.employee.nil? ? @author.username : @author.employee.fullname) unless @author.nil? %>
    </p>
    <p>
      <strong>Contributeurs :</strong>
      <%= contributors_full_names(@contributors) %>
    </p>
  </fieldset>
</div>
