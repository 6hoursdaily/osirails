<h1>Listing employees</h1>

<div class="frame">
<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th colspan="3">Actions</th>
  </tr>

<% for employee in @employees %>
  <tr>
    <td><%=h employee.first_name %></td>
    <td><%=h employee.last_name %></td>
    <td><%= link_to 'Details', employee %></td>
    <td><%= link_to 'Modifier', edit_employee_path(employee) %></td>
    <td><%= link_to 'Supprimer', employee, :confirm => 'Etes vous ?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Ajouter', new_employee_path %>
</div>
