<div id="jobs_list">
  <table>
    <% for associated_job in jobs %>
      <tr>
        <td>
          <%= check_box_tag "employee[job_ids][]", associated_job.id, verify_param_employee('job_ids',associated_job) %>
        </td>
        <td>
          <%= associated_job.name %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
