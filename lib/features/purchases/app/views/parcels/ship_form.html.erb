<% content_for :header do %>
  <%= stylesheet_link_tag_with_theme_support "purchases/purchases" %>
<% end %>

<%= generate_purchase_order_contextual_menu_partial(@purchase_order) %>

<h1>Colis</h1>
<div class="presentation_medium">

  <%= render :partial => "parcels/array_head" %>
  <%= render :partial => "parcels/parcel", :object => @parcel, :locals => { :purchase_order => @purchase_order } %>
  <%= render :partial => "parcels/array_foot" %>

  <h2>Signaler le colis comme "Exp&eacute;di&eacute;".</h2>
  <% form_for [@purchase_order, @parcel], :url => { :action => "ship" }  do |f| %>
    <%= f.error_messages %>
    <div class="presentation_in_columns">
      <%= render :partial => "parcels/ship_forms", :object => f %>
    </div>
    <br>
  <%= f.form_buttons %>
  <% end %>
</div>
