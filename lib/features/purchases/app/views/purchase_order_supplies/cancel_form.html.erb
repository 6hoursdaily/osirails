<% content_for :header do %>
  <%= stylesheet_link_tag_with_theme_support "purchases/purchases" %>
<% end %>

<h1>Fourniture de l'ordre</h1>
<div class="presentation_medium">
  <table class="no_nth">
    <thead>
      <tr>
        <th>R&eacute;f&eacute;rence</th>
        <th>D&eacute;signation</th>
        <th>Colis associ&eacute;s</th>
        <th>Statut</th>
        <th>Depuis le</th>
        <th>Quantit&eacute;</th>
        <th>PU TTC</th>
        <th>Prix total TTC</th>
        <th>Demandes associées</th>
        <th>R&eacute;f&eacute;rence fournisseur</th>
        <th>Désignation fournisseur</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "purchase_order_supplies/purchase_order_supply_in_one_line_for_view", :object => @purchase_order_supply %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
  
  <h2>Annuler la fourniture.</h2>
  <% form_for [@purchase_order_supply.purchase_order, @purchase_order_supply], :url => { :action => "cancel" } do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :cancelled_comment %>
      <%= f.text_area_autoresize :cancelled_comment %>
    </p>
    <p>
      <%= f.submit "Valider" %>
    </p>
  <% end %>
</div>
