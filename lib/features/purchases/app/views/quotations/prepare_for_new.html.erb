<% content_for :header do -%>
  <%= javascript_include_tag 'purchases/purchases' %>
  <%= stylesheet_link_tag_with_theme_support 'purchases/purchases' %>
<% end -%>

<%= generate_quotation_contextual_menu_partial(@quotation) %>

<h1>Nouveau devis</h1>

<div class="presentation_medium">
<% unless params['supplier_choice']  %>
  <h2>&Agrave; partir d'une liste vide.</h2>
  <p><%= link_to "Nouveau", prepare_for_new_quotation_path(:supplier_choice => true) %></p>
  
  <h2>&Agrave; partir du fournisseur en se basant sur les demandes d'achat existantes.</h2>
  <div class="presentation_in_columns">
    <% if @suppliers.empty? %>
      <p>Il n'y a aucune demande d'achat en attente pour le moment.</p>
    <% else %>
      <p><%= render :partial => "purchase_request_supplies/grouped_by_supplier_purchase_request_supplies", :collection => @suppliers %></p>
      <%= will_paginate @suppliers %>
    <% end %>
  </div>
  
  <h2>&Agrave; partir d'une liste d'articles se basant sur les demandes d'achat existantes.</h2>
  <div class="presentation_in_columns">
    <% if @purchase_supplies.empty? %>
      <p>Il n'y a aucune demande d'achat en attente pour le moment.</p>
    <% else %>
      <p><%= render :partial => "purchase_request_supplies/grouped_by_purchase_request_supplies", :object => @purchase_request_supplies %></p>
    <% end %>
  </div>
<% else%>
  <%= render :partial => "quotation_requests/supplier_choice", :object => @quotation, :locals => { :supplier_choice_only => true } %>
<% end %>
</div>
