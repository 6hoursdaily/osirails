<% add_contextual_menu_item :requests do %>
  <%= edit_purchase_request_link(@order) %>
  <%= link_to(image_tag("view_16x16.png", :alt => list_text = "Voir les infos du dossier", :title => list_text) + " " + list_text, order_informations_path(@order)) if Order.can_list?(current_user) %>
  
  <%= new_purchase_request_link(:link_text => "Nouveau dossier") if Order.can_add?(current_user) %>
  <%= link_to(image_tag("list_16x16.png", :alt => list_text = "Voir tous les dossiers", :title => list_text) + " " + list_text, in_progress_orders_path) if Order.can_list?(current_user) %>
<% end %>
