<% quotation_request = contextual_menu %>

<% add_contextual_menu_item :possible_actions do %>
  <%= display_quotation_request_confirm_button(quotation_request) if (is_edit_view? or is_show_view?) %>
  <%= display_quotation_request_add_button unless is_new_view? or (params[:action] == "prepare_for_new") %>
  <%= display_quotation_request_edit_button(quotation_request) if is_show_view? %>
  <%= display_quotation_request_cancel_button(quotation_request) if (is_show_view? or is_edit_view?) and !(params[:action] == "cancel_form" or params[:action] == "cancel") %>
  <%= display_quotation_request_delete_button(quotation_request) if is_show_view? or is_edit_view? %>
  <%= display_quotation_request_make_copy_button(quotation_request) if is_show_view? or is_edit_view? %>
  <%= display_quotation_request_review_button(quotation_request) if is_show_view? or is_edit_view? %>
  <%= display_quotation_request_send_to_another_supplier_button(quotation_request) if is_show_view? or is_edit_view? %>
<% end %>

<%= render :partial => 'quotation_requests/useful_links_contextual_menu', :object => quotation_request %>
