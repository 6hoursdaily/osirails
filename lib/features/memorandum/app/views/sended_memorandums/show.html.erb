<h1>Note de service</h1>

<div class='frame'>
<h2 style='text-align: center;'><%= @sended_memorandum.title %></h2>

<div class='formated_content'>
  <fieldset>
    <p><strong>Object : </strong><%= @sended_memorandum.subject %></p>
    <p><strong>Date : </strong><%= get_structured_date(@sended_memorandum) %></p>
    <p><strong>Destinataire : </strong><%= get_recipient(@sended_memorandum) %></p>
    <hr/>
    <%= @sended_memorandum.text %>
    <hr/>
    <p><strong>De : </strong> <%= @sended_memorandum.signature %></p>
    <p><strong>Publi&eacute; par : </strong> <%= get_employee(@sended_memorandum) %></p>
  </fieldset>
</div>

<%= link_to("Modifier", edit_sended_memorandum_path(@sended_memorandum)) %> <%= link_to("Retour", sended_memorandums_path) %>
</div>
