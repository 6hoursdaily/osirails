<h3>Création d'une nouvelle catégorie ou d'une nouvelle référence</h3>

<p>
<%= label( "select[type]", "Ajouter : " )%>
<%= select( "select", "type", {"une catégorie" => 0, "une référence" => 1} )%>
</p>

<% form_for(:product_reference_category, @category, :url => { :action => 'create' }) do |category|%>
         <%= category.error_messages %>
<fieldset>
  <h3>Famille</h3>
  <p>
    <%= category.label :name, "Nom"%><br/>
    <%= category.text_field :name %>
  </p>

  <p>
    <%= category.label :product_reference_category_id, "Parent" %>
    <%= category.collection_select(:product_reference_category_id, @categories, :id, :name, options = {:include_blank => '-- Racine --'}) %>
  </p>
          <%= category.submit "Ajouter"%> &brvbar; <%= link_to( "Retour", :action => 'index' ) %>
</fieldset>
<% end %>

<% form_for(:product_reference, @reference, :url => { :action => 'create' }) do |reference| %>
           <%= reference.error_messages %>
  <fieldset>
    <h3>Référence</h3>
    <p>
      <%= reference.label :name, "Nom" %><br />
      <%= reference.text_field :name %>
    </p>
  
    <p>
      <%= reference.label :description, "Description" %><br />
      <%= reference.text_field :description %>
    </p>
  
    <p>
      <%= reference.label :information, "Information complémentaire" %><br />
      <%= reference.text_field :information %>
    </p>
    
    <p>
      <%= reference.label :product_reference_category_id, "Famille" %>
      <%= reference.collection_select(:product_reference_category_id, @categories, :id, :name, {}) %>
    </p>
  
    <fieldset>
      <h3>Production</h3>
      <p>
        <%= reference.label :production_cost_manpower, "Coût de main-d'oeuvre" %><br />
        <%= reference.text_field :production_cost_manpower %>
      </p>
    
      <p>
        <%= reference.label :production_time, "Durée" %><br />
        <%= reference.text_field :production_time %>
      </p>
    </fieldset>
  
    <fieldset>
      <h3>Livraison</h3>
      <p>
        <%= reference.label :delivery_cost_manpower, "Coût de main-d'oeuvre" %><br />
        <%= reference.text_field :delivery_cost_manpower %>
      </p>
    
      <p>
        <%= reference.label :delivery_time, "Durée" %><br />
        <%= reference.text_field :delivery_time %>
      </p>
    </fieldset>
          <%= reference.submit "Ajouter"%> &brvbar; <%= link_to( "Retour", :action => 'index' ) %>
    </fieldset>
<% end %>