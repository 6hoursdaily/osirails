<% unless @reference_id == -1 %>
  <% references = ProductReference.find(:all, :conditions => {:enable => 1, :product_reference_category_id => @reference_id} )%>
  <%= show_reference_column(references) %>
<% else %>
  <% references = ProductReference.find(:all, :conditions => {:enable => 1})%>
  <%= show_reference_column(references) %>
<% end %>

