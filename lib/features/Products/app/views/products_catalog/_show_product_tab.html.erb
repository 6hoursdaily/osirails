<% unless @products == "0" or @products.size == 0%>
  <h2>Produits</h2>
  <div>
    <table>
      <thead>
        <th>Nom</th>
        <th>Categories</th>
        <th>R&eacute;f&eacute;rence</th>
        <th>Client</th>
        <th>Dossier</th>
      </thead>
      <tbody>
      <% for product in @products %>
        <% reference = ProductReference.find(product.product_reference_id) %>
        <% category = ProductReferenceCategory.find(reference.product_reference_category_id)%>
        <tr>
          <td><%= link_to_remote("#{product.name}", :update => "product_informations", :url => { :action => :show_product_information, :id => product.id}) %></td>
          <td><%= category.name %></td>
          <td><%= reference.name %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>