<div class='presentation_medium'>
  <h2>Bon &agrave; tirer</h2>
  <%= render :partial => "press_proofs/press_proofs_list", :object => [ @owner_class.find(@owner.id) ], :locals => { :press_proofs => [ @owner_class.find(@owner.id) ]} %>
</div>

<h1>Signaler qu&apos;une relance a &eacute;t&eacute; effectu&eacute;e</h1>
<div class='presentation_medium'>

<% unless dunnings.empty? %>
  <h3>Historique des relances</h3>
  <%= render :partial => "dunnings", :object => dunnings, :locals => {:without_action => true } %>
  <hr/>
<% end %>

<% form_for(dunning,:url => {:action => :create}) do |form| %>  
  <%= form.error_messages %>
  <p>
    <%= form.label :date %>
    <%= form.form_or_view(form.date_select(:date,{ :start_year => 1900, :order => [:day,:month,:year] }), :date)%>
  </p>
  
  <% unless is_form_view? %>
  <p>
    <%= form.label :creator %>
    <strong><%= dunning.creator.employee_name %></strong>
  </p>
  <% end %>
  
  <p>
    <%= form.label :dunning_sending_method %>
    <%= form.form_or_view(collection_select(:dunning, :dunning_sending_method_id, DunningSendingMethod.all, :id, :name),:dunning_method, :name) %>
  </p>
  
  <p>
    <%= form.label :comment %>
    <%= form.form_or_view(form.text_area_autoresize(:comment, :cols => 50), :comment)%>
  </p>
  
  <%= form.form_buttons %>
<% end %>
</div>
