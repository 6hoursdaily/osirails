<%
require_locals form
quote = quote_footer
%>

<p>
  <%= form.label :sales_terms %>
  <%= form.form_or_view(form.text_area_autoresize(:sales_terms), :sales_terms) %>
</p>

<p>
  <%= form.label :validity_delay %>
  <%= form.form_or_view(form.text_field(:validity_delay, :size => 2), :validity_delay) %> <%= form.form_or_view(form.select(:validity_delay_unit, Quote::VALIDITY_DELAY_UNITS), :validity_delay_unit) %>
</p>

<p>
  <%= form.label :deposit, 'Acompte (%) :' %>
  <%= form.form_or_view(form.text_field(:deposit, :value => quote.deposit.to_f.round_to(2).to_s(2), :size => 5), strong(quote.deposit.to_f.round_to(2).to_s(2))) %>
</p>
