<%
quote = quote_in_one_line
status = quote.status ? " #{quote.status}_quote" : ''
title = quote.status ? " title=\"#{quote.status.titleize} quote\"" : ''
%>

<tr class="quote<%= status %>"<%= title %>>
  <td class="selector"><%= context_menu(quote, 'quote') %></td>
  <td class="reference text"><%= quote.reference %></td>
  <td class="created_at"><%= quote.created_at.humanize if quote.created_at %></td>
  <td class="confirmed_on"><%= quote.confirmed_on.humanize if quote.confirmed_on %></td>
  <td class="contact"><%= quote.quote_contact.fullname %></td>
  <td class="number_of_products"><%= quote.number_of_products %></td>
  <td class="net_to_paid amount"><%= quote.net_to_paid.round_to(2).to_s(2) %>&nbsp;&euro;</td>
  <td class="deposit amount"><%= quote.deposit %>&nbsp;%</td>
  <td class="sended_on"><%= "#{quote.sended_on.humanize} (#{quote.send_quote_method.name})" if quote.sended_on and quote.send_quote_method %></td>
  <td class="signed_on"><%= quote.signed_on.humanize if quote.signed_on %></td>
  <td class="status"><%= quote_status_text(quote) %></td>
</tr>
