<% invoices = invoices_list %>

<div class="autoscroll">
  <table>
    <thead>
      <tr>
        <th><%= toggle_selectable_items_link(image_tag('confirm_16x16.png'), 'invoice') %></th>
        <th>Réf.</th>
        <th>Émise&nbsp;le</th>
        <th>Type</th>
        <th>Montant&nbsp;total<br/>TTC&nbsp;(&euro;)</th>
        <th>Nb<br/>échéances</th>
