          <th>Règlement&nbsp;Factor</th>
        <% end %>
        <th>Règlement&nbsp;Total</th>
        <th>État</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => 'invoices/invoice_in_one_line', :collection => invoices %>
    </tbody>
  </table>
</div>
