<% @order.all_children.each do |child| %>
	<% if child.start_date %>
	<div class="timeline_body good"><span class="timeline_date"><%= child.start_date.strftime("%C %B %Y") %></span><span class="timeline_notice">D&eacute;but de l'&eacute;tape <%= child.step.title.downcase %></span></div>
	<% end %>
	<% if child.end_date %>
	<div class="timeline_body good"><span class="timeline_date"><%= child.end_date.strftime("%C %B %Y") %></span><span class="timeline_notice">Fin de l'&eacute;tape <%= child.step.title.downcase %></span></div>
	<% end %>
<% end %>
<% if @order.closed_date %>
	<div class="timeline_body good"><span class="timeline_date"><%= @order.closed_date.strftime("%C %B %Y") %></span><span class="timeline_notice">Cl&ocirc;ture du dossier</span></div>
<% end %>
	<div id="timeline_footer"></div>
</div>