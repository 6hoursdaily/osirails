<% order = order_timeline %>
<div id="timeline">
	<div id="timeline_head" class="good">
    <span class="timeline_date" title="<%= l(order.created_at, :format => :long) %>"><%= l(order.created_at.to_date, :format => :short) %></span>
    <span class="timeline_notice">Cr√©ation de dossier</span>
  </div>
  
<% order.all_steps.each do |child| %>
	<% if child.started_at %>
	<div class="timeline_body good">
    <span class="timeline_date" title="<%=child.started_at.humanize %>"><%= child.started_at.to_date.humanize %></span>
    <span class="timeline_notice">D&eacute;but de l'&eacute;tape <%= child.original_step.title.downcase %></span>
  </div>
  <% else %>
  <div class="timeline_body bad">
    <span class="timeline_date"></span>
    <span class="timeline_notice">D&eacute;but de l'&eacute;tape <%= child.original_step.title.downcase %></span>
  </div>
	<% end %>

	<% if child.finished_at %>
	<div class="timeline_body good">
    <span class="timeline_date" title="<%= child.finished_at.humanize %>"><%= child.finished_at.to_date.humanize %></span>
    <span class="timeline_notice">Fin de l'&eacute;tape <%= child.original_step.title.downcase %></span>
  </div>
	<% end %>
<% end %>

<% if order.closed_at %>
	<div class="timeline_body good">
    <span class="timeline_date" title="<%= order.closed_at.humanize %>"><%= order.closed_at.to_date.humanize %></span>
    <span class="timeline_notice">Cl&ocirc;ture du dossier</span>
  </div>
<% end %>
	
  <div id="timeline_footer"></div>
</div>
