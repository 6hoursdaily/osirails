<% order = order_timeline %>
<div id="timeline">
	<div id="timeline_head" class="good">
    <span class="timeline_date" title="<%= order.created_at.to_humanized_datetime %>"><%= order.created_at.to_humanized_date %></span>
    <span class="timeline_notice">Cr√©ation de dossier</span>
  </div>
  
<% order.all_steps.each do |child| %>
	<% if child.start_date %>
	<div class="timeline_body good">
    <span class="timeline_date" title="<%=child.start_date.to_humanized_datetime %>"><%= child.start_date.to_humanized_date %></span>
    <span class="timeline_notice">D&eacute;but de l'&eacute;tape <%= child.original_step.title.downcase %></span>
  </div>
  <% else %>
  <div class="timeline_body bad">
    <span class="timeline_date"><%= child.original_step_name %></span>
    <span class="timeline_notice">D&eacute;but de l'&eacute;tape <%= child.original_step.title.downcase %></span>
  </div>
	<% end %>

	<% if child.end_date %>
	<div class="timeline_body good">
    <span class="timeline_date" title="<%= child.end_date.to_humanized_datetime %>"><%= child.end_date.to_humanized_date %></span>
    <span class="timeline_notice">Fin de l'&eacute;tape <%= child.original_step.title.downcase %></span>
  </div>
	<% end %>
<% end %>

<% if order.closed_date %>
	<div class="timeline_body good">
    <span class="timeline_date" title="<%= order.closed_date.to_humanized_datetime %>"><%= order.closed_date.to_humanized_date %></span>
    <span class="timeline_notice">Cl&ocirc;ture du dossier</span>
  </div>
<% end %>
	
  <div id="timeline_footer"></div>
</div>
