<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet type="text/css" href="/stylesheets/order_clock.css"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN" "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg width="162px" height="162px" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  <defs>
    <!-- External clock part -->
    <g id="external_portion">
      <path d="M 0 0 L 0 -80 A 80 80 0 0,1 <%= 80 * Math::sin((360/@order.children.size)*Math::PI/180) %> <%= -80 * Math::cos((360/@order.children.size)*Math::PI/180) %> L 0 0" />
    </g>
    <% unless @order.child.children.empty? %>
    <!-- Internal clock part -->
    <g id="internal_portion">
      <path d="M 0 0 L 0 -64 A 64 64 0 0,1 <%= 64 * Math::sin((360/@order.child.children.size)*Math::PI/180) %> <%= -64 * Math::cos((360/@order.child.children.size)*Math::PI/180) %> L 0 0" />
    </g>
    <% end %>
  </defs>

  <!-- Show external element -->
  <% angle = 360 / @order.children.size %>
  <% @order.children.each_with_index do |c, index| %>
    <g title="<%= c.step.title %>" class="portions<%= " #{@order.child.name}" if c.in_progress? or c.terminated? %>">
      <use xlink:href="#external_portion" x="81" y="81" transform="rotate(<%= index * angle %>,81,81)" />
    </g>
  <% end %>

  <% unless @order.child.children.empty? %>
  <!-- Show internal element -->
  <% angle = 360 / @order.child.children.size %>
  <% @order.child.children.sort_by {|s| s.status }.each_with_index do |c, index| %>
  <g title="<%= c.step.title %>" class="portions<%= " terminated" if c.terminated? %>">
    <use xlink:href="#internal_portion" x="81" y="81" transform="rotate(<%= index * angle %>,81,81)" />
  </g>
  <% end %>
  <% end %>
</svg>
