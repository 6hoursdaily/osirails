<% content_for :header do -%>
  <%= stylesheet_link_tag_with_theme_support 'sales/sales' %>
  <%= javascript_include_tag 'sales/order' %>
<% end -%>

<% contextual_menu "Avancement du projet" do %>
  <object data="<%= formatted_order_path(@order, 'svg') %>" type="image/svg+xml" style="width: 162px; height: 162px;"></object>
  <%= remaining_time_before_delivery(@order) %>
<% end %>

<% contextual_menu POSSIBLE_ACTIONS do %>
  <%= link_to 'Modifier le dossier', edit_order_path(@order) if menu_orders.can_edit?(current_user) %>
<% end %>

<div>
  <div id="order_header">
    <div class="first_column">
      <p>
        <label>Nom du projet :</label>
        <strong><%= @order.title %></strong>
      </p>

      <p>
        <label>Client / &Eacute;tablissement :</label>
        <% establishment_name = @order.establishment.nil? ? "" : "/ #{@order.establishment.name}" %>
        <strong><%= link_to( "#{@order.customer.name} #{establishment_name}", @order.customer) %></strong>
      </p>

      <div class="order_header_extra">
        <p>
          <label>Lieu de livraison :</label>
          <strong><%= @order.establishment.nil? ? "Pas d'Ã©tablissement" : @order.establishment.full_address %></strong>
        </p>

        <p>
          <label>Date pr&eacute;visionnelle de livraison :</label>
          <strong><%= @order.previsional_delivery.humanize %></strong>
        </p>
      </div>
    </div>
    <div class="second_column">
      <p>
        <label>Type de dossier :</label>
        <strong><%= @order.order_type.title %></strong>
      </p>

      <p>
        <label>Suivi commercial :</label>
        <strong><%= @order.commercial.fullname %></strong>
      </p>
      
      <div class="order_header_extra">
        <p>
          <label>Contact :</label>
          <strong><%= @order.contacts.first.fullname %> <%= link_to("(Voir plus)", order_informations_path(:anchor => 'contacts_section')) %></strong>
        </p>
      </div>
    </div>
  </div>
  <div id="order_header_more">
    <%= link_to "Plus d'informations", '#order_more_infos' %>
  </div>

  <p>
  <% if menu_orders.can_edit?(current_user) %>
    <%= link_to 'Modifier', edit_order_path(@order) %>
  <% end %>
  </p>
</div>
 
