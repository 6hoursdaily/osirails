<% delivery_note = delivery_note_body %>

<table id="delivery_note_items" class="sales_table">
  <thead>
    <tr>
      <th>Réf.</th>
      <th>Désignation</th>
      <th>Qté devis</th>
      <th>Qté déjà<br/>livrée (ou planifiée)&#160;*</th>
      <th>Qté à livrer</th>
      <%= "<th>Actions</th>" if is_form_view?%>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => 'delivery_note_items/delivery_note_item', :collection => delivery_note.delivery_note_items,
               :locals => {:collection_length => delivery_note.delivery_note_items.size}%>
  </tbody>
</table>

<span class="help_text">* hormis la quantité de la colonne <strong>Qté à livrer</strong> de ce document</span>
