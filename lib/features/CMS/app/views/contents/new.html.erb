<% content_for :header do %>
  <%= javascript_include_tiny_mce_if_used %>
  <%= tiny_mce if using_tiny_mce? %>
<% end %>

<h1>Nouveau contenu</h1>

<div class="frame presentation_medium">
<% form_for(@content) do |content| %>
  <%= render :partial => 'form', :locals => {:content => content, :submit_button_name => "Ajouter"} %>
<% end %>
</div>