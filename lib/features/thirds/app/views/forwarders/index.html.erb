<% content_for :header do -%>
  <%= javascript_include_tag 'thirds/thirds' %>
  <%= stylesheet_link_tag_with_theme_support 'thirds/thirds' %>
<% end -%>

<%= generate_forwarder_contextual_menu_partial(@forwarder) %>

<h1>Liste des transporteurs</h1>
<div>
  <% if @forwarders.empty? %>
    <p>Aucun transporteur</p>
  <% else %>
    <table>
      <%= render :partial => "array_head" %>
      <tbody>
        <%= render :partial => "forwarder_in_one_line", :collection => @forwarders %>
      </tbody>
    </table>
    <%= will_paginate @forwarders %>
  <% end %>
</div>
