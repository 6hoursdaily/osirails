<%
  require_locals form
  third = third_financial_info
  form.force_show_view = force_show_view ||= false
%>
  
<h3>Informations bancaires</h3>
<% if third.class.equal?(Customer) %>
  <p>
    <%= form.label :factor_id %>
    <%= form.form_or_view(form.collection_select(:factor_id, Factor.all, :id, :name_and_fullname, :include_blank => "Aucune"), :factor, :name_and_fullname ) %>
  </p>
  <p>
    <%= form.label :customer_solvency %>
    <%= form.form_or_view(form.collection_select(:customer_solvency_id, CustomerSolvency.all(:order => 'id DESC'), :id, :name, 
                                                :include_blank => third.new_record? ? "Veuillez choisir un degré de solvabilité" : false), :customer_solvency, :name) %>
  </p>
<% else %>
  <%= render :partial => 'shared/iban', :object => third.iban || third.build_iban, :locals => { :iban_owner => third } %>
<%  end %>
