<div class="frame presentation_medium">

<% if is_form_view? %>
  <% form_for @supplier, :html => { :multipart => true } do |form| %>
    <%= render :partial => 'thirds/third', :object => @supplier %>

    <%= display_contacts_list(@supplier) %>
    <%= display_contact_add_button(@supplier) %>

    <%# display_documents_and_add_documents_button(@customer, @documents, params, @new_document_number, @error) %>

  <p>
    <%= form.reset 'Annuler' %>
    <%= form.submit submit_button_name %>
  </p>
  <% end %>  
<% else %>
  <%= render :partial => 'thirds/third', :object => @supplier %>
  <%= display_contacts_list(@supplier) %>
<% end %>

</div>

<p>
  <%= link_to 'Retour', :back %>
</p>