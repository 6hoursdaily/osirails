<% secondary_menu POSSIBLE_ACTIONS do %>
  <%= show_add_button("Ajouter un fournisseur") %>
<% end %>

<h1> Liste des fournisseurs </h1>

<div class="frame">
  <% unless @suppliers.empty?%>
    <table>
      <tr>
        <th>Nom</th> 
        <th>Secteurs d'activit√©s</th>
        <th>Note</th>
        <th>Actions</th>
      </tr>
    
      <%for supplier in @suppliers%>
        <tr>
          <td><%= supplier.name %></td>
          <td><%= supplier.activity_sector.name unless  supplier.activity_sector.nil?%></td>
          <td><%= supplier.note %></td>
          <td>
            <%= show_view_button(supplier) %> 
            <%= show_edit_button(supplier) %>
            <%= show_delete_button(supplier) %>
            </td>
        </tr>
    <%end%>
  <%end%>
  </table>
</div>
