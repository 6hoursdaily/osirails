<% content_for :header do -%>
  <%= javascript_include_tag 'thirds/thirds' %>
  <%= stylesheet_link_tag_with_theme_support 'thirds/thirds' %>
<% end -%>

<%= generate_conveyance_contextual_menu_partial(@purchase_) %>

<h1>Modifier le moyen de transport</h1>
<div class="presentation_in_columns">
  <% form_for @conveyance do |form| %>
    <%= form.error_messages %>
    <table>
        <%= render :partial => "array_head" %>
        <tbody>
        <%= render :partial => "conveyances/conveyance_in_one_line", :object => @conveyance, :locals => { :form => form } %>
        </tbody>
    </table>
    <%= form.form_buttons %>
  <% end %>
</div>
