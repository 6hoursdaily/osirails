<% category = @object.supply_category %>

<% display_context_menu do |c| %>
   <% c.submenu "#{category.name}" do %>
     <%= display_supply_category_add_button(category, 'Nouvelle sous-famille') %>
     <%= display_supply_category_show_button(category, 'Voir') %>
     <%= display_supply_category_edit_button(category, 'Modifier') %>
     <%= display_supply_category_disable_button(category, 'Désactiver') %>
     <%= display_supply_category_enable_button(category, 'Activer') %>
     <%= display_supply_category_delete_button(category, 'Supprimer') %>
   <% end %>
   
   <% sub_category = @object.supply_sub_category %>
   <% c.submenu "#{sub_category.name}" do %>
     <%= display_supply_category_add_button(sub_category, 'Nouvelle matière première') %>
     <%= display_supply_category_show_button(sub_category, 'Voir') %>
     <%= display_supply_category_edit_button(sub_category, 'Modifier') %>
     <%= display_supply_category_disable_button(sub_category, 'Désactiver') %>
     <%= display_supply_category_enable_button(sub_category, 'Activer') %>
     <%= display_supply_category_delete_button(sub_category, 'Supprimer') %>
   <% end %>
   
   <%= c.entry display_supply_show_button(@object, 'Voir') %>
   <%= c.entry display_supply_edit_button(@object, 'Modifier') %>
   <%= c.entry display_supply_disable_button(@object, 'Désactiver') %>
   <%= c.entry display_supply_enable_button(@object, 'Activer') %>
   <%= c.entry display_supply_delete_button(@object, 'Supprimer') %>
<% end %>
