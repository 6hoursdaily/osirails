<% content_for :header do %>
<script type="text/javascript" src="/javascripts/logisctic/commodity_category.js"></script>
<% end %>

<% secondary_menu POSSIBLE_ACTIONS do %>
  <%= show_commodity_category_add_button %>
  <%= show_commodity_add_button %>
<% end %>

<% secondary_menu USEFUL_LINKS do %>
  <%= show_inventory_list_button %>
  <%= show_inventory_view_button(@inventory) unless @inventory.nil? %>
  <%= show_inventory_add_button%>
<% end %>

<h1>Ajouter une nouvelle cat&eacute;gorie de mati&egrave;re premi&egrave;re</h1>
<div class="frame presentation_medium">
  <% form_for(@category) do |form| %>

  <p>
    <%= form.error_messages %>
  </p>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <% if @type == "child" or @root_commodity_category != nil %>
    <%= form.label :unit_measure_id %>
    <%= form.collection_select(:unit_measure_id, format_unit_measure, :id, :name, {}) %>
    <% end %>
  </p>

  <p>
    <%= form.label :commodity_category_id %>
    <%= form.collection_select(:commodity_category_id, @categories, :id, :name , options = {:include_blank => '-- Racine --'}, {:onchange => 'disableUnitMeasure();'}) %>
  </p>

  <p>
    <%= form.submit "Ajouter" %>
  </p>

  <% end %>
</div>
