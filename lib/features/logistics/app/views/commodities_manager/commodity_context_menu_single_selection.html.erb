<%
supply_category = @object.supply_category
supply_sub_category = @object.supply_sub_category
supply_type = @object.supply_type
%>

<% display_context_menu do |c| %>
  <%= c.title Commodity.human_name %>
  
  <% c.submenu "#{supply_category.name}" do %>
    <%= c.title CommodityCategory.human_name %>
    <% supply_category_action_buttons(supply_category).each do |button| %>
      <%= c.entry button %>
    <% end %>
  <% end %>
  
  <% c.submenu "#{supply_sub_category.name}" do %>
    <%= c.title CommoditySubCategory.human_name %>
    <% supply_sub_category_action_buttons(supply_sub_category).each do |button| %>
      <%= c.entry button %>
    <% end %>
  <% end %>
  
  <% c.submenu "#{supply_type.name}" do %>
    <%= c.title CommodityType.human_name %>
    <%= c.entry new_supply_link(@object.class, :supply_type_id => supply_type.id) %>
  <% end %>
  
  <% supply_action_buttons(@object).each do |button| %>
    <%= c.entry button %>
  <% end %>
<% end %>
