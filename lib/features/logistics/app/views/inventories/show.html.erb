<% content_for :header do %>
  <%= javascript_include_tag 'logistics/supplies' %>
<% end %>

<% add_contextual_menu_item :statistics do %>
  <span style='color: red;'>VALEUR TOTALE DU STOCK : <%= number_with_precision(@supply.class.stock_value(@date),2) + " €" %></span>
<% end %>

<% add_contextual_menu_item :possible_actions do %>
  <%= new_inventory_link(Commodity.new)%>
  <%= new_inventory_link(Consumable.new)%>
<% end %>

<% add_contextual_menu_item :useful_links do %>
  <%= inventories_link %>
  <%= commodity_categories_link %>
  <%= consumable_categories_link %>
<% end %>

<h1>&Eacute;tat des <%= (params[:type]=="Commodity" ? "matières premières" : "consommables") + " au " + @date.strftime("%d-%m-%Y") %></h1>

<div>
  <% unless @categories.empty? %>
    <%= "<table class='#{@supply.class.name.tableize.singularize}'>" %>
      <tr>
        <th rowspan='2'>Cat&eacute;gorie</th>
        <th rowspan='2'>Sous cat&eacute;gorie</th>
        <th rowspan='2'>R&eacute;f.</th>
        <th rowspan='2'>D&eacute;signation</th>
        <th rowspan='2'>Fournisseurs</th>
        <th colspan='4'>Stock/fournisseur</th>
        <th colspan='4'>Stock total</th>
        <tr>          <th>Quantité</th>                <th>Grandeur</th>
          <th>Masse</th>   
          <th>Valeur</th>   
          <th>Quantité</th>                <th>Grandeur</th>
          <th>Masse</th>   
          <th>Valeur</th>     
        </tr>
      </tr>      
    <%= render(:partial => "supply_category", :collection => @supplies_categories_root) %>      
    </table>
  <% else %>
    <p>Aucune cat&eacute;gorie existante</p>
  <% end %>
</div>
