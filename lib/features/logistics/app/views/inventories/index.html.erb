<% add_contextual_menu_item :commodities_stats do %>
	<%= "<span class='contextual_menu_statistic'>Il y a #{pluralize(@inventories.size, "inventaire", "inventaires")}</span>" %>
	<%= @inventory_closed.size == 0 ? "<span class='contextual_menu_statistic'>Il n'y a pas d'inventaire en cours</strong>" : "<span class='contextual_menu_statistic'>Il y a 1 inventaire en cours</span>" %>
<% end %>

<% add_contextual_menu_item :possible_actions do %>
  <%= new_inventory_link %>
<% end %>

<% add_contextual_menu_item :useful_links do %>
