<%= display_flash %>

<% form_for(:user, current_user) do |f| %>
<p>
	<%= f.error_messages %>
  <%= f.label :password, "Mot de passe" %><br />
  <%= f.password_field :password, :value => "" %>
</p>
<p>
  <%= f.label :password_confirmation, "Confirmation du mot de passe" %><br />
  <%= f.password_field :password_confirmation, :value => "" %> 
</p>
<%= f.submit "Valider"%>
<% end %>
