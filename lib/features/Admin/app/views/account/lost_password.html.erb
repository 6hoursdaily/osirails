<% if current_user %>
  <p class="message">Vous &ecirc;tes d&eacute;j&agrave; connect&eacute;</p>
  <% else %>
  <p class="message">Entrer votre nom d'utilisateur pour demander &agrave; l'administrateur un nouveau mot de passe</p>
  <% form_tag :action => 'lost_password' do %>
    <p>
    <%= label_tag 'username', "Nom d'utilisateur :" %><br />
    <%= text_field_tag 'username' %>
    </p>
    <p><%= submit_tag 'Envoyer' %> <%= link_to "Retourner &agrave; la page de connexion", login_path %></p>
  <% end %>
<% end %>