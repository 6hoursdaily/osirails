<% if current_user %>
  <p>Vous êtes déjà logger</p>
  <%= link_to 'Se déconecter', logout_path %>
  <% else %>
  <p>Entrer votre username pour demander &agrave; l'administrateur un nouveau mot de passe</p>
  <% form_tag :action => 'lost_password' do %>
  <p>
  <%= label_tag 'username' %><br />
  <%= text_field_tag 'username' %>
  </p>
  <p><%= submit_tag 'Envoyer' %> <%= link_to "Retour à la page de login", login_path %></p>
  <% end %>
<% end %>