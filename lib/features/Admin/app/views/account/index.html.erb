<%= display_flash %>

<% if current_user %>
<p>Vous êtes déjà logger</p>
<%= link_to 'Se déconecter', logout_path %>
<% else %>

<% form_tag :action => 'login' do %>
<p>
<%= label_tag 'username' %><br />
<%= text_field_tag 'username' %>
</p>
<p>
<%= label_tag 'password' %><br />
<%= password_field_tag 'password' %>
</p>
<p><%= submit_tag 'Login' %></p>
<% end %>
<% end %>