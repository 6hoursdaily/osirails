<% if current_user %>
  <p>Vous êtes déjà logger</p>
  <%= link_to 'Se déconecter', logout_path %>
<% else %>

  <% form_tag :action => 'login' do %>
  <p>
  <%= label_tag 'username', "Nom d'utilisateur :" %>
  <%= text_field_tag 'username' %>
  </p>
  <p>
  <%= label_tag 'password', "Mot de passe :" %>
  <%= password_field_tag 'password' %>
  </p>
  <p><%= submit_tag 'Connexion' %> <%= link_to "Mot de passe oubli&eacute; ?", :controller => 'account', :action => 'lost_password' %></p>
  <% end %>
<% end %>