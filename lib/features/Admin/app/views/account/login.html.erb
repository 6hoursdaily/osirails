<% if current_user %>
  <p class="message">Vous &ecirc;tes d&eacute;j&agrave; connect&eacute;</p>
<% else %>

  <% form_tag :action => 'login' do %>
  <p>
  <%= label_tag 'username', "Nom d'utilisateur :" %>
  <%= text_field_tag 'username' %>
  </p>
  <p>
  <%= label_tag 'password', "Mot de passe :" %>
  <%= password_field_tag 'password' %>
  </p>
  <%= submit_tag 'Connexion' %>
  <span><%= link_to "Mot de passe oubli&eacute; ?", :controller => 'account', :action => 'lost_password' %></span>
  <% end %>
<% end %>