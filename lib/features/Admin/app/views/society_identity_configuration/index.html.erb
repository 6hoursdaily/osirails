<h1>Param&egrave;tres de base de l'entreprise</h1>
<div class="cadre">
  <%= render :partial => 'form' %>
  <fieldset>
    <legend>Coordonn&eacute;es</legend>
    <p>
      <b>Adresse :</b>
      <% second_line =  display_markup("admin_society_identity_configuration_address_second_line", @parameters["admin_society_identity_configuration_address_second_line"]) %>
      <%if second_line == "0" %>
      <%=h display_markup("admin_society_identity_configuration_address_first_line", @parameters["admin_society_identity_configuration_address_first_line"]) %>
      <% else %>
      <%=h display_markup("admin_society_identity_configuration_address_first_line", @parameters["admin_society_identity_configuration_address_first_line"]) +" "+ second_line %>
      <% end %>
    </p>
    <p>
      <b>Pays :</b>
      <%=h display_markup("admin_society_identity_configuration_address_country", @parameters["admin_society_identity_configuration_address_country"]) %>
    </p>
    <p>
      <b>Ville :</b>
      <%=h display_markup("admin_society_identity_configuration_address_town", @parameters["admin_society_identity_configuration_address_town"]) %>
    </p>
    <p>
      <b>Code postal :</b>
      <%=h display_markup("admin_society_identity_configuration_address_zip", @parameters["admin_society_identity_configuration_address_zip"]) %>
    </p>
  </fieldset>
  <%= link_to "Modifier", :action => 'edit' %> &#124; <%= link_to "Retour", :controller => 'society_configurations', :action => 'index' %>
</div>