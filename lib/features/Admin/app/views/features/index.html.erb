<h1>Liste des modules</h1>

<%= display_success_flash %>
<%= display_failure_flash %>

<table>
  <tr>
    <th>Nom</th>
    <th>Version</th>
    <th>Date d'ajout</th>
    <th colspan="4">Administration</th>
    
  </tr>
  <% for feature in @features %>
    <tr>
      <td><%= feature.name %></td>
      <td><%= feature.version %></td>
      <td><%= feature.created_at.strftime("0%w/%m/%Y") %></td>
      <td>
      <%= feature.installed ? "<div class=\"admin_features_activated-installed\"> installé </div> ": "<div class=\"admin_features_non_activated-installed\"> NON-installé</div> "%>
      <%= feature.activated ? "<div class=\"admin_features_activated-installed\"> activé</div> ":"<div class=\"admin_features_non_activated-installed\"> NON-activé</div>" %>
      </td>
      <td><%= display_install_button(feature) %></td>
      <td><%= display_activate_button(feature) %></td>
      <td><%= display_remove_button(feature) %></td>
    </tr>
  <% end %>
</table>

<%= form_tag({:action => 'add_feature'}, :multipart => true) %>
<%= file_upload %>
<%= submit_tag "Upload" %>
</form>