<h1>Liste des services</h1>
    
<table>
  <tr>
    <th>Nom</th>
  </tr>

<% for service in @services %>
<tr>  
  <td><%= display_menu(service.name) %></td>
</tr>
  <tr id="<%= service.name%>">
    <td><%=h service.name %></td>
    <td><%= link_to 'Modifier', edit_service_path(service) %></td>
    <td><%= show_delete_button(service) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "Nouveau service", new_service_path %>