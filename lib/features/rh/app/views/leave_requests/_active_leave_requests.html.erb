<h2>Mes demandes en cours</h2>

<% if active_leave_requests.size > 0 %>

  <div>
    <table>
      <tr>
        <th>Date de d&eacute;but</th>
        <th>Date de fin</th>
        <th>Soumise le</th>
        <th>Statut</th>
        <th>Actions</th>
      </tr>
      
      <% for leave_request in active_leave_requests %>
        <tr>
          <td><%= leave_request.start_date.strftime("%A %d %B %Y") %></td>
          <td><%= leave_request.end_date.strftime("%A %d %B %Y") %></td>
          <td><%= leave_request.submitted_at.to_datetime.strftime("%A %d %B %Y Ã  %Hh%M") %></td>
          <td><%= view_status(leave_request) %></td>
          <td>
            <%= leave_request_link(leave_request, :link_text => "") %>
            <%= cancel_leave_request_link(leave_request,true) %>
            <%= delete_leave_request_link(leave_request, :link_text => "") %>
          </td>
        </tr>
      <% end %>
      
    </table>
  </div>
  
<% else %>

  <div>
    <p>Aucune demande en cours</p>
  </div>

<% end %>
