<h2 class="warning" >Demandes d'employés à traiter</h2>

<div>
  <table>
    <tr>
      <th>Employé</th>
      <th>Date de début</th>
      <th>Date de fin</th>
      <th>Créée le</th>
      <th>Actions</th>
    </tr>
    
    <% for leave_request in leave_requests_to_notice %>
      <% if leave_request.checked? %>
        <tr>
          <td><%=h "#{leave_request.employee.first_name} #{leave_request.employee.last_name}" %></td>
          <td><%=h leave_request.start_date.strftime("%A %d %B %Y") %></td>
          <td><%=h leave_request.end_date.strftime("%A %d %B %Y") %></td>
          <td><%=h leave_request.created_at.to_datetime.strftime("%A %d %B %Y à %Hh%M") %></td>
          <td>
            <%= edit_leave_request_link(leave_request,:link_text => "") %>
          </td>
        </tr>
      <% end %>
    <% end %>
    
  </table>
</div>
