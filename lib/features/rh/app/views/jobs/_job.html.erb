<div class="presentation_medium">

<%form_for(job) do |form|%>
  <%= form.error_messages %>
  <p>
    <%= form.label :name %>
    <%= form.form_or_view(form.text_field(:name),:name)%>
  </p>
  <p>
    <%= form.label :service %>
    <%= form.form_or_view(form.collection_select(:service_id, Service.all, :id, :name), :service, :name) %>
  </p>
  <p>
    <%= form.label :responsible %>
    <% if is_form_view? %>
      <%= form.check_box(:responsible , {}, '1', '0') %>
    <% else %>
      <%= strong( job.responsible? ? "Oui" : "Non" ) %>
    <% end %>
  </p> 
  <p>
    <%= form.label :mission %>
    <%= form.form_or_view(form.text_area( :mission, {:rows => 5}),:mission) %>
  </p>
  <p>
    <%= form.label :activity %>
    <%= form.form_or_view(form.text_area( :activity, {:rows => 5}),:activity) %>
  </p>
  <p>
    <%= form.label :goal %>
    <%= form.form_or_view(form.text_area( :goal, {:rows => 5}),:goal) %>
  </p>
  <%= form.form_buttons %>
<% end %>
</div>
