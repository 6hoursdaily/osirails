<% add_contextual_menu_item :useful_links do %>
  <%= employee_link(@employee, :link_text => "Voir l'employé") %>
  <%= employees_link(:link_text => "Voir tous les employés") %>
<% end %>

<h1>Historique du salaire</h1>

<%= render :partial => 'employees/employee_summary', :locals => {:employee => @employee}%>

<div class="presentation-medium">
  <% if @salaries.empty? %>
    <p>Aucun salaire</p>  
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Montant brut</th>
          <th>Montant net</th>
          <th>Date de mise en application</th>
        </tr>
      </thead>
      <tbody>
        <% for salary in @salaries%>
          <tr>
            <td><%=h salary.gross_amount%> &euro;</td>
            <td><%=h net(salary.net_amount)%> &euro;</td>
            <td><%=h salary.created_at.strftime("%d/%m/%Y")%></td>
          </tr> 
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
