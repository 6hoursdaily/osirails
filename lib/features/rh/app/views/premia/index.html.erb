<% contextual_menu USEFUL_LINKS do %>
  <%= employee_link(@employee) %>
  <%= employees_link %>
<% end %>

<h1>Historique des primes de <%=@employee.fullname%></h1>

<div>
<table>
    <tr>
      <th>Montant</th>
      <th>Commentaire</th>
      <th>Date</th>
    </tr>
    <% for premium in @premia%>
    <tr>
      <td><%=h premium.amount %></td>
      <td><%=h premium.remark %></td>
      <td><%=h premium.date.strftime("%d/%m/%Y") unless premium.date.nil? %></td>
    </tr> 
    <%end%>
</table>
</div>
