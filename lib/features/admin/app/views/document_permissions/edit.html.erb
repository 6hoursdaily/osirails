<h1>Configurer les permissions</h1>
<%= display_tabulated_menu %>

<div class="frame tabulation">
  <h1>Modifier les permissions du document "<%= params[:id] %>"</h1>
  <h2>pour chaque r&ocirc;le</h2>
  <table>
    <tr>
      <th rowspan="2">Roles</th>
      <th colspan="6">Permissions</th>
    </tr>
    <tr>
      <th>Lister</th>
      <th>Voir</th>
      <th>Ajouter</th>
      <th>Modifier</th>
      <th>Supprimer</th>
			<th>Tout cocher</th>
    </tr>
  <% form_tag(document_permission_path, :method => 'put') do %>
  <% for document in @document_permissions %>
    <tr>
        <td><%= link_to document.role.name, edit_role_permission_path(document.role.id) %></td>
        <td><%= check_box_tag "list[]", document.role_id, document.list %></td>
        <td><%= check_box_tag "view[]", document.role_id, document.view %></td>
        <td><%= check_box_tag "add[]", document.role_id, document.add %></td>
        <td><%= check_box_tag "edit[]", document.role_id, document.edit %></td>
        <td><%= check_box_tag "delete[]", document.role_id, document.delete %></td>
				<td><input type="checkbox" class="checkbox_permission"></td>
      </tr>
  <% end %>
  </table><br/>
  <%= submit_tag "Mettre Ã  jour" %>
  <% end %><br/><br/>
  <%= link_to "Retour", document_permissions_path %>
</div>
<%= javascript_include_tag 'permission' %>