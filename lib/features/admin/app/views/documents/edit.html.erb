<div class="frame">
<h2>Upload&eacute; une nouvelle version</h2>
  <% form_for([@document.has_document, @document], :html => { :multipart => true}) do |form| %>
    
    <p>
      <%= form.label :name%>
      <%= form.text_field :name%>
    </p>
    
    <p>
      <%= form.label :description%>
      <%= form.text_field :description%>
    </p>

    <p>
        <%= form.label :tag_list, "Tags"%>
        <%= form.text_field :tag_list%>
    </p>

    <p>
      <%= label :file, :data, "Fichier :"%>
      <%= file_upload%>
    </p>
    
    <%= form.submit "Uploader"%> <%= link_to "retour", [@document.has_document, @document]%>
      
  <%end%>
</div>