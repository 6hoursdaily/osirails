<div id="group_day">
	<% date = @date.beginning_of_week %>
	<% 7.times do %>
	<div class="day"><%= $day_fr[date.wday] + " " + date.day.to_s %></div>
	<% date += 1.days %>
	<% end %>
</div>
<div id="calendar">
	<div id="scroll">
		<div id="hour_column">
		<% 24.times do |i| %>
		<%= "<div class=\"hour\">#{i}h00</div>" %>
		<% end %>
		</div>
		<div id="grid">
			<% date = @date.beginning_of_week %>
			<% 7.times do %>
			<div id="<%= date.strftime('%a') %>" class="day_grid" <%= "style=\"background-color: #E2E0DA;\"" if date == @date %>>
					<div class="day_grid_border"><ul></ul></div>
			</div>
			<% date += 1.days %>
			<% end %>
		</div>
	</div>
</div>