<h2><%= $month_fr[@date.month - 1] %> <%= @date.year %></h2>
<div id="calendar_content">
	<div id="scroll">
		<div id="group_day_month">
			<div class="day_month">Lundi</div>
			<div class="day_month">Mardi</div>
			<div class="day_month">Mercredi</div>
			<div class="day_month">Jeudi</div>
			<div class="day_month">Vendredi</div>
			<div class="day_month">Samedi</div>
			<div class="day_month">Dimanche</div>
		</div>
		<div id="grid_month">
			<% date = @date.beginning_of_month.beginning_of_week %>
			<% 5.times do %>
			<% 7.times do %>
			<div id="<%= date.to_s.gsub("-","") %>" class="day_grid">
				<span class="day_number"><%= date.day %></span><ul></ul>
			</div>
			<script type="text/javascript">add_droppable('<%= date.to_s.gsub("-","") %>');</script>
			<% date += 1.day %>
			<% end %>
			<% end %>
		</div>
	</div>
	<script type="text/javascript">
	calendar_init(<%= params[:id] %>, 'month', "<%= navigation_before(@date) %>", "<%= navigation('day') %>", "<%= navigation('week') %>", "<%= navigation('month') %>", "<%= navigation_after(@date) %>", "<%= get_events_link %>");
	all_day = document.getElementsByClassName('day_grid');
	for (var i=0; i < all_day.length; i++) {
		all_day[i]
	};
	</script>