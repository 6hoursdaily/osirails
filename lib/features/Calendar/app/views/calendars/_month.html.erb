<h2><%= $month_fr[@date.month - 1] %> <%= @date.year %></h2>
<div id="calendar_content">
	<div id="group_day"><%= everyday_of_a_week(@date) %></div>
	<div id="scroll">
		<table id="grid_month" class="no-style" border='1'>
			<% date = @date.beginning_of_month.beginning_of_week %>
			<% 5.times do %>
			<tr>
				<% 7.times do %>
				<td class="day_grid">
					<div class="day_grid_border"><%= date.day %><ul></ul></div>
				</td>
				<% date += 1.day %>
				<% end %>
			</tr>
			<% date += 1.day %>
			<% end %>
		</table>
	</div>
</div>
<script type="text/javascript">
calendar_init(<%= params[:id] %>, 'month', "<%= navigation_before(@date) %>", "<%= navigation('day') %>", "<%= navigation('week') %>", "<%= navigation('month') %>", "<%= navigation_after(@date) %>", "<%= get_events_link %>");
</script>