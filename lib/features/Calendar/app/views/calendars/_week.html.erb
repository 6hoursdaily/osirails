<h2><%= $month_fr[@date.month - 1] %> <%= @date.year %> (semaine <%= @date.week %>)</h2>
<div id="calendar_content">
	<div id="group_day"><%= everyday_of_a_week(@date) %><ul id="full_day_bar"><li>TODO Gerer les événements sur journée pleine</li></ul></div>
	<div id="scroll">
		<div id="hour_column">
			<% 24.times do |i| %><%= "<div class=\"hour\">#{i}h00</div>" %><% end %>
		</div>
		<div id="grid_week">
			<% date = @date.beginning_of_week %>
			<% 7.times do %>
			<div id="<%= date.to_s.gsub("-","") %>" class="day_grid" <%= "style=\"background-color: #E2E0DA;\"" if date == Date::today %>>
				<div class="day_grid_border"><ul></ul></div>
			</div>
			<% date += 1.days %>
			<% end %>
		</div>
	</div>
</div>
<script type="text/javascript">
calendar_init(<%= params[:id] %>, 'week', "<%= navigation_before(@date) %>", "<%= navigation('day') %>", "<%= navigation('week') %>", "<%= navigation('month') %>", "<%= navigation_after(@date) %>", "<%= get_events_link %>");
</script>