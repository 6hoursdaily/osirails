<h1><%= @calendar.title %> - <%= @date.day %> <%= $month_fr[@date.month - 1] %> <%= @date.year %></h1>
<div id="scroll">
	<div id="hour_column">
		<% 24.times do |i| %>
		<%= "<div class=\"hour\">#{i}h00</div>" %>
		<% end %>
	</div>
	<div id="grid_day">
		<div id="<%= @date.to_s.gsub("-","") %>" class="day_grid">
			<div class="day_grid_border"><ul></ul></div>
		</div>
	</div>
</div>
<script type="text/javascript">
calendar_init(<%= params[:id] %>, 'day', "<%= navigation_before(@date) %>", "<%= navigation('day') %>", "<%= navigation('month') %>", "<%= navigation('year') %>", "<%= navigation_after(@date) %>", "<%= get_events_link %>");
</script>